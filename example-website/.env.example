# Environment Configuration Example
# Copy this file to .env and update with your values

# Environment
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Site Configuration
SITE_TITLE=Ansybl Example Site
SITE_DESCRIPTION=A demonstration of the Ansybl social syndication protocol
BASE_URL=https://example.com
AUTHOR_NAME=Demo Author
AUTHOR_URL=https://example.com/author
AUTHOR_AVATAR=https://example.com/avatar.jpg

# Security Configuration
CORS_ORIGIN=https://example.com
SESSION_SECRET=your-session-secret-here
API_KEY=your-api-key-here

# Ansybl Cryptographic Keys
# Generate with: node -e "import('./lib/signature.js').then(m => m.generateKeyPair().then(k => console.log('PRIVATE:', k.privateKey, '\nPUBLIC:', k.publicKey)))"
ANSYBL_PRIVATE_KEY=your-private-key-here
ANSYBL_PUBLIC_KEY=your-public-key-here

# File Upload Configuration
UPLOADS_DIR=public/uploads
MAX_FILE_SIZE=10485760
MAX_FILES=5

# Database Configuration (for future use)
DB_TYPE=memory
DATABASE_URL=

# Logging Configuration
LOG_LEVEL=info

# Monitoring Configuration
METRICS_PORT=9090
ENABLE_MONITORING=true

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL=300

# WebSocket Configuration
ENABLE_WEBSOCKET=true

# External Services (optional)
# SENTRY_DSN=
# REDIS_URL=
# S3_BUCKET=
# S3_REGION=
# S3_ACCESS_KEY=
# S3_SECRET_KEY=
